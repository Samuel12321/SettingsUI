<Page
    x:Class="SettingsUI.Demo.Pages.MaterialPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:controls="using:SettingsUI.Controls">
    <controls:SettingsPageControl
        IsTabStop="False"
        ModuleDescription="you can use MaterialHelper for accessing Mica, Acrylic and Blur Effect for your Window."
        ModuleImageSource="ms-appx:///Assets/Modules/PT.png"
        ModuleTitle="MaterialHelper">
        <controls:SettingsPageControl.ModuleContent>
            <StackPanel Spacing="10">
                <InfoBar IsOpen="True" IsClosable="False" Title="All Materials only Working in WASDK versions >= 1.1.0-preview2" Severity="Warning"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <Button Content="Mica" Name="btnMica" Width="150" Click="btnMica_Click"/>
                    <Button Content="Acrylic" Name="btnAcrylic" Width="150" Click="btnAcrylic_Click"/>
                    <Button Content="Blur" Name="btnBlur" Width="150" Click="btnBlur_Click"/>
                </StackPanel>

                <CheckBox Content="Is Dark Mode?" Name="chkIsDark" HorizontalAlignment="Center"/>
            </StackPanel>
        </controls:SettingsPageControl.ModuleContent>
    </controls:SettingsPageControl>
</Page>
